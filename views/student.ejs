                <table class="datatable table table-hover table-center mb-0">
                  <thead>
                    <tr>
                      <th data-field="column1" class="sorting">#</th>
                      <th data-field="column2" class="sorting">Họ và tên</th>
                      <th data-field="column3" class="sorting">SĐT PH</th>
                      <th data-field="column4" class="sorting">Tên PH</th>
                      <th data-field="column5" class="sorting">Ghi chú</th>
                      <th data-field="column6" class="sorting">Email PH</th>
                      <th data-field="column7" class="sorting">Trạng thái</th>
                      <th data-field="column8" class="text-right sorting"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% rows.slice(2).forEach((row, index)=> { %>
                      <tr>
                        <td>
                          <%= index + 1 %>
                        </td>
                        <td>
                          <%= row[0] %>
                        </td>
                        <td>
                          <%= row[1] %>
                        </td>
                        <td>
                          <%= row[2] %>
                        </td>
                        <td>
                          <%= row[3] %>
                        </td>
                        <td>
                          <%= row[4] %>
                        </td>
                        <td>
                          <% var paymentStatus = row[41] %>
                        <span class="badge badge-pill bg-<%= paymentStatus === 'Đã hoàn thành' ? 'success' : 'danger' %>-light">
                          <%= paymentStatus %>
                        </span>
                        </td>
                        <td class="text-right">
                          <div class="actions" style="display: flex;">
                            <a class="btn btn-sm bg-primary-light" 
                            onclick="window.location.href = '<%= classname %>/collect/<%= index + 2 %>'" 
                            style="margin-right: 5px; width: 72px;"
                            data-id="<%= index + 3 %>"><i class=""></i>Thu tiền</a>

                            <a class="btn btn-sm bg-success-light btn-edit" data-toggle="modal" style="margin-right: 5px;"
                              data-id="<%= index + 3 %>" data-name="<%= row[1] %>" data-description="<%= row[2] %>"
                              href="#Edit_student">
                              <i class="fe fe-pencil"></i> Sửa
                            </a>
                            <a data-toggle="modal" href="#Delete_student" data-id="<%= index + 3 %>"
                              class="btn btn-sm bg-danger-light btn-delete-speciality">
                              <i class="fe fe-trash"></i> Xoá
                            </a>
                          </div>
                        </td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>


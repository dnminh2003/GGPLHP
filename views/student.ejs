  <script>
    // Gán classname vào các input hidden trong các form
    document.querySelectorAll('.classname').forEach(input => {
      input.value = classname;
    });

    const resultModal = new bootstrap.Modal(document.getElementById('resultModal'));
    const resultModalLabel = document.getElementById('resultModalLabel');
    const resultMessage = document.getElementById('resultMessage');
    const errorMessage = document.getElementById('errorMessage');
  
    // Xử lý khi nhấn nút Submit
    document.getElementById('add-btn').addEventListener('click', function() {
      const studentName = document.getElementById('studentName').value;
      const parentPhone = document.getElementById('parentPhone').value;
      const parentName = document.getElementById('parentName').value;
      const parentEmail = document.getElementById('parentEmail').value;
      const note = document.getElementById('note').value;
  
      // Tạo body cho fetch request
      const body = JSON.stringify({
        classname: classname,
        studentName: studentName,
        parentPhone: parentPhone,
        parentName: parentName,
        parentEmail: parentEmail,
        note: note
      });
  
      // Thực hiện fetch request
      fetch('add', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: body
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          new bootstrap.Modal(document.getElementById('Add_Student')).hide(); // Ẩn modal thêm trước
          resultModalLabel.innerText = "Thêm học sinh thành công!";
          resultMessage.innerText = data.message;
          errorMessage.innerText = '';
          // Reload trang web sau khi thực hiện xong các thay đổi
          window.location.reload();
        } else {
          resultModalLabel.innerText = "Thêm học sinh thất bại!";
          resultMessage.innerText = data.message;
          errorMessage.innerText = data.message + '\n' + data.err;
        }
        resultModal.show();
        setTimeout(() => resultModal.hide(), 5000); // Tự động ẩn sau 5 giây
      })
      .catch(error => {
        console.error('Error:', error);
        resultModalLabel.innerText = "Thêm học sinh thất bại!";
        resultMessage.innerText = '';
        errorMessage.innerText = 'Error adding student. Please try again later.';
        resultModal.show();
      });
    });
  
    // EDIT
    // Function to open edit modal and pre-fill data
    document.querySelectorAll('.btn-edit').forEach(button => {
      button.addEventListener('click', function() {
        const row = this.closest('tr').children;
        document.getElementById('editStudentName').value = row[1].innerText;
        document.getElementById('editParentPhone').value = row[2].innerText;
        document.getElementById('editParentName').value = row[3].innerText;
        document.getElementById('editNote').value = row[4].innerText;
        document.getElementById('editParentEmail').value = row[5].innerText;
        document.getElementById('editRowId').value = this.getAttribute('data-id'); // Use appropriate attribute for row ID
        document.getElementById('editClassname').value = classname; // Set classname
        new bootstrap.Modal(document.getElementById('Edit_student')).show();
      });
    });
  
    // Handle update request
    document.getElementById('edit-btn').addEventListener('click', function() {
      const studentName = document.getElementById('editStudentName').value;
      const parentPhone = document.getElementById('editParentPhone').value;
      const parentName = document.getElementById('editParentName').value;
      const parentEmail = document.getElementById('editParentEmail').value;
      const note = document.getElementById('editNote').value;
      const rowId = document.getElementById('editRowId').value;
      const classname = document.getElementById('editClassname').value;
  
      const body = JSON.stringify({
        classname: classname,
        studentName: studentName,
        parentPhone: parentPhone,
        parentName: parentName,
        parentEmail: parentEmail,
        note: note
      });
  
      fetch(`/update/${rowId}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: body
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          new bootstrap.Modal(document.getElementById('Edit_student')).hide(); // Ẩn modal sửa trước
          resultModalLabel.innerText = "Cập nhật học sinh thành công!";
          resultMessage.innerText = data.message;
          errorMessage.innerText = '';
          // Reload trang web sau khi thực hiện xong các thay đổi
          window.location.reload();
        } else {
          resultModalLabel.innerText = "Cập nhật học sinh thất bại!";
          resultMessage.innerText = data.message;
          errorMessage.innerText = data.message + '\n' + data.err;
        }
        resultModal.show();
        setTimeout(() => resultModal.hide(), 5000); // Tự động ẩn sau 5 giây
      })
      .catch(error => {
        console.error('Error:', error);
        resultModalLabel.innerText = "Cập nhật học sinh thất bại!";
        resultMessage.innerText = '';
        errorMessage.innerText = 'Error updating student. Please try again later.';
        resultModal.show();
      });
    });
  
    // DELETE
    let rowIdToDelete = null;
  
    // Show delete confirmation modal and set row ID
    document.querySelectorAll('.btn-delete-speciality').forEach(button => {
      button.addEventListener('click', function() {
        rowIdToDelete = this.getAttribute('data-id');
        new bootstrap.Modal(document.getElementById('deleteConfirmationModal')).show();
      });
    });
  
    // Handle delete confirmation
    document.getElementById('confirm-delete-btn').addEventListener('click', function() {
      const body = JSON.stringify({
        classname: classname,
      });
  
      fetch(`/delete/${rowIdToDelete}`, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json'
        },
        body: body
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          resultModalLabel.innerText = "Xoá học sinh thành công!";
          resultMessage.innerText = data.message;
          errorMessage.innerText = '';
          document.querySelector(`a[data-id="${rowIdToDelete}"]`).closest('tr').remove();
        } else {
          resultModalLabel.innerText = "Xoá học sinh thất bại!";
          resultMessage.innerText = data.message;
          errorMessage.innerText = data.message + '\n' + data.err;
        }
        resultModal.show();
        setTimeout(() => resultModal.hide(), 5000); // Tự động ẩn sau 5 giây
      })
      .catch(error => {
        console.error('Error:', error);
        resultModalLabel.innerText = "Xoá học sinh thất bại!";
        resultMessage.innerText = '';
        errorMessage.innerText = 'Error deleting student. Please try again later.';
        resultModal.show();
      });
    });
  
    // Hide all modals when the result modal is hidden
    document.getElementById('resultModal').addEventListener('hide.bs.modal', function() {
      document.querySelectorAll('.modal').forEach(modal => {
        new bootstrap.Modal(modal).hide();
      });
    });
  </script>
  

